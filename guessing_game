from random import randint

num_to_guess = randint(1, 10)
# print(num_to_guess)  # For debugging purposes, you can see the number to guess
guess = 0
quit = False
emoji = "\U0001f600"
while guess != num_to_guess and not quit:
    guess = input("Guess a number from 1 to  10 (or type 'quit' to exit): ")
    if guess.lower() == 'quit':
        print('Thanks for playing!  Goodbye!')
        quit = True
    elif guess.isdigit() == False or int(guess) < 1 or int(guess) > 10:
        print("This is a very serious guessing game. Enter a number from 1 to 10 or 'quit' to exit...")
    elif int(guess) < num_to_guess:
        print("Too low! Try again.")
    elif int(guess) > num_to_guess:
        print("Too high! Try again.")
    else:
        print("\nCongratulations! You guessed the number!" + emoji * 3)
        num_to_guess = randint(1, 10)  # Reset the number to guess for the next round
        # print(num_to_guess)  # For debugging purposes, you can see the new number to guess
